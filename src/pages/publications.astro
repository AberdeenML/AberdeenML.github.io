            font-weight: 700;
        }

        .event-details h3 {
            color: var(--dark);
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }

        .event-location {
            color: var(--gray);
            margin-bottom: 0.5rem;
        }

        .event-description {
            color: var(--gray);
        }

        .event-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        /* Search Bar */
        .search-container {
            margin-bottom: 2rem;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .search-input {
            width: 100%;
            padding: 1rem 1.5rem;
            border: 2px solid var(--light-gray);
            border-radius: 50px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.1);
        }

        /* Statistics */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 3rem;
