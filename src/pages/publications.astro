    <script>
        // Wait for the DOM to be fully loaded before running scripts
        document.addEventListener('DOMContentLoaded', () => {

            // --- Function to automatically calculate and update all counts ---
            function updateAllCounts() {
                // Select all items by category
                const allPublicationItems = document.querySelectorAll('.publication-item');
                const allEventItems = document.querySelectorAll('.event-item');
                const allTutorialItems = document.querySelectorAll('.publication-type.tutorial');
                const allWorkshopItems = document.querySelectorAll('.publication-type.workshop');
                const allConferencePaperItems = document.querySelectorAll('.publication-type.conference');
                const allJournalPaperItems = document.querySelectorAll('.publication-type.journal');
                const allSummerSchoolItems = document.querySelectorAll('[data-category="schools"] .event-item');

                // Calculate counts
                const pubCount = allPublicationItems.length;
                const presentationCount = allEventItems.length;
                const tutorialCount = allTutorialItems.length;
                const workshopCount = allWorkshopItems.length;
                const conferencePaperCount = allConferencePaperItems.length;
                const journalPaperCount = allJournalPaperItems.length;
                const summerSchoolCount = allSummerSchoolItems.length;
                const totalCount = pubCount + presentationCount + summerSchoolCount;
                
                // Update filter button counts
                document.querySelector('.filter-btn[data-filter="all"] .count').textContent = totalCount;
                document.querySelector('.filter-btn[data-filter="publications"] .count').textContent = pubCount;
                document.querySelector('.filter-btn[data-filter="presentations"] .count').textContent = presentationCount;
                document.querySelector('.filter-btn[data-filter="tutorials"] .count').textContent = tutorialCount;
                document.querySelector('.filter-btn[data-filter="workshops"] .count').textContent = workshopCount;
                document.querySelector('.filter-btn[data-filter="schools"] .count').textContent = summerSchoolCount;

                // Update stats card numbers
                document.getElementById('total-pubs-stat').textContent = pubCount;
                document.getElementById('journal-stat').textContent = journalPaperCount;
                document.getElementById('papers-stat').textContent = conferencePaperCount;
                document.getElementById('workshops-stat').textContent = workshopCount;
            }

            // --- Call the function to populate counts on page load ---
            updateAllCounts();


            // --- EXISTING SCRIPT LOGIC (UNCHANGED) ---

            // Filter functionality
            const filterBtns = document.querySelectorAll('.filter-btn');
            const sections = document.querySelectorAll('.section');

            filterBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    filterBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const filter = btn.dataset.filter;
                    sections.forEach(section => {
                        const category = section.dataset.category;
                        // Special handling for tutorials and workshops which are in the same section
                        if (filter === 'all' || filter === category) {
                           section.style.display = 'block';
                        } else if ((filter === 'tutorials' || filter === 'workshops') && category === 'tutorials') {
                           section.style.display = 'block';
                        } else {
                           section.style.display = 'none';
                        }
                    });
                });
            });

            // Search functionality
            const searchInput = document.querySelector('.search-input');
            const allItems = document.querySelectorAll('.publication-item, .event-item');

            searchInput.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                
                allItems.forEach(item => {
                    // Make sure the item is part of a visible section first (respects filtering)
                    const parentSection = item.closest('.section');
                    if (parentSection.style.display !== 'none') {
                        const text = item.textContent.toLowerCase();
                        const matches = text.includes(searchTerm);
                        // We hide the direct item instead of its parent grid cell
                        item.style.display = matches ? '' : 'none'; // Use '' to revert to default display
                    }
                });
            });

            // Fade in animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.fade-in').forEach(el => {
                observer.observe(el);
            });

            // Smooth scrolling for back link
            document.querySelector('.back-link').addEventListener('click', (e) => {
                e.preventDefault();
                // You can modify this to actually go back to your main page
                // For demonstration, it just uses browser history
                window.history.back();
            });
        });
    </script>
